    <connection>scm:git:git://github.com/intuit/QuickBooks-V3-Java-SDK.git</connection>
    <developerConnection>scm:git:git@github.com:intuit/QuickBooks-V3-Java-SDK.git</developerConnection>
</scm>
</project>